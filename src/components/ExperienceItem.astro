---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  deploy?: string;
  logo?: string;
  date: string;
}

const { title, company, description, link, date, deploy, logo } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-primary -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >
      <div class="flex gap-4">
        <img
          src={logo}
          alt="logo"
          class="h-14 rounded-full aspect-square bg-white"
        />
        <div>
          <h4 class="font-bold text-xl text-gray-600 dark:text-white">
            {company}
          </h4>
          <h3 class="text-lg font-semibold text-primary">{title}</h3>
          <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
            >{date}</time
          >
        </div>
      </div>
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3"
  >
    {description}
    {
      link && (
        <LinkInline href={link}>
          Saber m√°s{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
    {
      deploy && (
        <a
          href={deploy}
          class="flex items-center border border-primary/25 w-1/6 max-md:w-1/2  text-primary  font-semibold  rounded-md justify-center px-2 py-1 transition-all duration-300 hover:border-primary"
        >
          <span>Deploy</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="20"
            height="20"
            viewBox="0 0 20 20"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </a>
      )
    }
  </div>
</div>
